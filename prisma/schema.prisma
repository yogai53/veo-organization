generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model Employee {
  id        Int           @id @default(autoincrement())
  name      String        @db.VarChar(255)
  createdAt DateTime      @default(now()) @db.Timestamp(6)
  parentId  Int
  extra     Json?
  role      Employee_role

  @@index([parentId])
}

enum Employee_role {
  MANAGER
  DEVELOPER
}
